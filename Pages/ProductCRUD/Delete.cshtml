@page
@model quitanda_online.Pages.ProductCRUD.DeleteModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>@ViewData["Title"]</h1>

<h3>Deseja realmente excluir este produto?</h3>
<div>
    <h4><b>Código: </b> @Model.Product.IdProduct.ToString("D6") </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Inventory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Inventory)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Product.IdProduct" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar à listagem</a>
    </form>
</div>
