@page "{id:int}"
@model quitanda_online.Pages.ClienteCRUD.AlterarModel
@{
    ViewData["Title"] = "Alteração de Cliente";
}


<main class="container mt-3">
    <div class="row justify-content-center">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <form method="POST" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Cliente.Id">
            <div class="form-group">
                <label asp-for="Cliente.Name" class="control-label"></label>
                <input asp-for="Cliente.Name" class="form-control col-6">
                <span asp-validation-for="Cliente.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CPF" class="control-label"></label>
                <input asp-for="Cliente.CPF" class="form-control" />
                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.DataNascimento" class="control-label"></label>
                <input asp-for="Cliente.DataNascimento" class="form-control" />
                <span asp-validation-for="Cliente.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Telefone" class="control-label"></label>
                <input asp-for="Cliente.Telefone" class="form-control" />
                <span asp-validation-for="Cliente.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Cliente.Situacao">Situação do Cliente</label>
                <select asp-for="Cliente.Situacao" class="form-control">
                    <option value="Bloqueado">Bloqueado</option>
                    <option value="Cadastrado">Cadastrado</option>
                    <option value="Aprovado">Aprovado</option>
                    <option value="Especial">Especial</option>
                </select>
            </div>

            <div class="form-group text-left mt-3">
                <a asp-page="./Listar" class="btn btn-danger">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-primary">
            </div>
        </form>

    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}